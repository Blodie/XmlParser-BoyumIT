@model WebOrder
@{
    ViewData["Title"] = "Home Page";
}

<form class="w-50" method="post" enctype="multipart/form-data" action="/">
    <label for="file" class="form-label">Input XML file</label>
    <div class="input-group mb-6">
        <input class="form-control" type="file" name="file" accept=".xml">
        <button type="submit" class="btn btn-primary">Process</button>
    </div>
</form>

@if (Model is not null)
{
    <div class="pt-3">
        <h4>Result</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateString)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateString)
            </dd>
        </dl>
    </div>
}
